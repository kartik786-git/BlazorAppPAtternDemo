@page "/diamond-pattern"
<h3>Diamond_pattern</h3>
<ul>
    <li>Hill pattern</li>
    <li>Reverse hill pattern</li>
</ul>
<div style="font-size:50px">
    @for (int i = 1; i < Number; i++)
    {
        <div>
            @for (int k = i; k <= Number; k++)
            {
                <span>&nbsp;&nbsp;</span>
            }
            @for (int k = 1; k < i; k++)
            {
                <span style="color:darkblue">* </span>
            }
            @for (int l = 1; l <= i; l++)
            {
                <span style="color:red">* </span>
            }
        </div>
    }

</div>

<div style="font-size:50px">
    @for (int i = 1; i <= Number; i++)
    {
        <div>
            @for (int k = 1; k <= i; k++)
            {
                <span>&nbsp;&nbsp;</span>
            }
            @for (int k = i; k < Number; k++)
            {
                <span style="color:red">* </span>
            }
            @for (int k = i; k <= Number; k++)
            {
                <span style="color:darkblue">* </span>
            }
        </div>
    }

</div>
@code {
    private int Number = 5;
}